<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMauiApp.HaberDetaySayfasi"
             Title="Haber Detayı">
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*">
        
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Padding="10" ColumnSpacing="10">
            <Label Grid.Column="0" x:Name="NewsTitleLabel" FontSize="Large" FontAttributes="Bold" VerticalOptions="Center"/>
            <Button Grid.Column="1" x:Name="ShareButton" Text="Paylaş" Clicked="OnShareClicked" VerticalOptions="Center"/>
        </Grid>
        
        <WebView Grid.Row="1" x:Name="NewsWebView" />
    </Grid>
</ContentPage>
