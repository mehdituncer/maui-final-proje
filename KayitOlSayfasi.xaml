<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMauiApp.KayitOlSayfasi"
             Title="Kayıt Ol">
    <VerticalStackLayout Spacing="20" Padding="30,0" VerticalOptions="Center">
        <Entry x:Name="EmailEntry" Placeholder="E-posta" Keyboard="Email"/>
        <Entry x:Name="PasswordEntry" Placeholder="Şifre" IsPassword="True"/>
        <Entry x:Name="ConfirmPasswordEntry" Placeholder="Şifre Tekrar" IsPassword="True"/>
        <Button Text="Kayıt Ol" Clicked="OnRegisterButtonClicked"/>
        <Button Text="Giriş Sayfasına Dön" Clicked="OnBackToLoginButtonClicked"/>
    </VerticalStackLayout>
</ContentPage>
